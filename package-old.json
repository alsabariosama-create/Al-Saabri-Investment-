{
  "name": "al-saabri-investment-management",
  "version": "1.0.0",
  "description": "نظام إدارة الاستثمار السعبري - تطبيق شامل لإدارة الاستثمارات والمستثمرين",
  "main": "main.js",
  "homepage": "https://alsabariosama-create.github.io/Al-Saabri-Investment-/",
  "repository": {
    "type": "git",
    "url": "https://github.com/alsabariosama-create/Al-Saabri-Investment-.git"
  },
  "keywords": [
    "investment",
    "management",
    "finance",
    "iraq",
    "arabic",
    "pwa",
    "electron",
    "firebase"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "serve": "http-server . -p 8080 -c-1",
    "pack": "electron-builder --dir",
    "release": "electron-builder --publish=always"
  },
  "author": {
    "name": "Osama Al-Saabri",
    "email": "alsabariosama@gmail.com",
    "url": "https://github.com/alsabariosama-create"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "firebase": "^10.0.0"
  },
  "build": {
    "appId": "com.alsaabri.investment",
    "productName": "إدارة الاستثمار السعبري",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "copyright": "Copyright © 2025 Osama Al-Saabri",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes}",
      "!**/{__pycache__,*.py[cod],*$py.class}",
      "!**/{.env,.venv,env,venv,ENV,env.bak,venv.bak}",
      "!dist",
      "!build"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/app-icon-new.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام إدارة الاستثمار",
      "installerIcon": "assets/app-icon-new.ico",
      "uninstallerIcon": "assets/app-icon-new.ico",
      "installerHeaderIcon": "assets/app-icon-new.ico",
      "language": "1025"
    }
  }
}